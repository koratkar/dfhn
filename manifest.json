{
  "name": "DFHN",
  "version": "1.0",
  "description": "Distraction Free Hacker News",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "js": ["df.js"],
    "matches": ["https://news.ycombinator.com/*"]
  }],
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "manifest_version": 3,
  "action": {}
}
